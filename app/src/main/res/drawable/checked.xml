<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <gradient
                        android:startColor="#56B2DC"
                        android:centerColor="#56B2DC"
                        android:endColor="#56B2DC"
                        android:angle="270" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item
                android:gravity="center_vertical|center_horizontal"
                android:drawable="@drawable/ic_check_24px" />

        </layer-list>
    </item>

</selector>