<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="18dp"
            android:fontFamily="@font/staatliches_font_family"
            android:text="Budget for this month" />

        <com.msindwan.shoebox.widgets.Gauge
            android:id="@+id/dashboard_home_gauge_budget"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/dashboard_home_txt_budget_status"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:paddingTop="25dp"
            android:paddingBottom="15dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/staatliches_font_family"
            android:text="Recent transactions" />


        <TextView
            android:visibility="gone"
            android:id="@+id/dashboard_home_txt_empty_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No transactions found" />

        <com.msindwan.shoebox.views.dashboard.components.TransactionListView
            android:id="@+id/lst_txns"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:visibility="gone"
            android:background="@drawable/listview_card_background"
            android:id="@+id/dashboard_home_btn_view_more_transaction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:fontFamily="@font/staatliches_regular"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="View more transactions"
            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/dashboard_home_btn_add_transaction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:fontFamily="@font/staatliches_regular"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Add new transaction" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

