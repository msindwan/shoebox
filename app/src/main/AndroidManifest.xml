<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.msindwan.shoebox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.AppIndex"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".views.setup.Setup"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".views.settings.BudgetSchedule"
            android:label="@string/app_name">
        </activity>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".views.transactions.NewTransaction"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".views.dashboard.Dashboard"
            android:label="@string/new_transaction">
        </activity>

    </application>

</manifest>